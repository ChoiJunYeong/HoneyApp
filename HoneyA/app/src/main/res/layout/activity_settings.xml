<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.honeya.honeya.DestSettingActivity"
    android:orientation="vertical"
    android:background="@color/semi_white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/Icon"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Email"
            android:layout_below="@+id/Email"
            android:layout_marginTop="9dp"
            android:text="TextView" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Destination Settings"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <Button
            android:id="@+id/defualtDestinationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkDefualtDestination"
            android:text="Destination Setting" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Destination Settings"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border">

        <Button
            android:id="@+id/AboutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showAbout"
            android:text="About" />

        <Button
            android:id="@+id/Tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showTips"
            android:text="Tips" />

        <Button
            android:id="@+id/ShowScanSettingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showScanSetting"
            android:text="Scan setting" />
    </LinearLayout>

</LinearLayout>
