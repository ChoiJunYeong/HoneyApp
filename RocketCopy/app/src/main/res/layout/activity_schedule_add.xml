<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/schedule_add_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.junyeong.rocketcopy.ScheduleAddActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lectureText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="강의명"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lectureText"
                android:ems="10"
                android:inputType="text"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/professorText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="교수"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/professor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/professorText"
                android:ems="10"
                android:inputType="text"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Spinner
                android:id="@+id/daySpinner"
                style="@style/SpinnerAsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:dropDownWidth="70dp" />

            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/daySpinner"
                android:text="요일"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/hourSpinner"
                style="@style/SpinnerAsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/dayText"
                android:dropDownWidth="70dp" />

            <TextView
                android:id="@+id/hourText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/hourSpinner"
                android:text="시"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/minSpinner"
                style="@style/SpinnerAsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/hourText"
                android:dropDownWidth="70dp" />

            <TextView
                android:id="@+id/minText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/minSpinner"
                android:text="분  ~"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/hourSpinner2"
                style="@style/SpinnerAsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hourSpinner"
                android:layout_marginTop="12dp"
                android:layout_toStartOf="@+id/hourSpinner"
                android:dropDownWidth="70dp" />

            <TextView
                android:id="@+id/hourText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hourSpinner2"
                android:layout_toEndOf="@+id/hourSpinner2"
                android:text="시"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/minSpinner2"
                style="@style/SpinnerAsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hourText2"
                android:layout_toEndOf="@+id/hourText2"
                android:dropDownWidth="70dp" />

            <TextView
                android:id="@+id/minText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/minSpinner2"
                android:layout_toEndOf="@+id/minSpinner2"
                android:text="분"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pure"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_menu_add"
            android:onClick="addTime"
            android:text="Add time" />

    </LinearLayout>


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:onClick="saveItem"/>
</RelativeLayout>