<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junyeong.rocketcopy.DestinationsActivity"
    android:id="@+id/destinations"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mark2"
            android:layout_alignParentStart="true"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/dest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/icon1"
                android:text="Destination1"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/dest1"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"
                android:text="Address1"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/mark1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/ic_menu_send" />

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/address1"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_menu_share" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/dest2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/icon2"
                android:text="Destination2"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/dest2"
                android:layout_marginStart="70dp"
                android:text="Address2"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/mark2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/ic_menu_send" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/address2"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_menu_share" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/dest3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/icon3"
                android:text="Destination3"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/address3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/dest3"
                android:layout_marginStart="70dp"
                android:text="Address3"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/mark3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/ic_menu_send" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/address3"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_menu_share" />
        </RelativeLayout>
</LinearLayout>
